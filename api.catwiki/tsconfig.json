{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "build"],
  "include": [
    "**/*",
    "src",
    ".eslintrc.js"
  ]
}